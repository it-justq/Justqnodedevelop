<!---------------------------------------------------------------->
<!--MAIN CONTAINER-->
<div class="container-width-content content-subheader">

        <div id="options-container">
            <div id="options-ct">
                <form action="/intranet/control/{{control_id}}/documentacion/add" id="fotos-nuevo-ct" method='post' enctype="multipart/form-data">
                    <input id="fotos-nuevo-input" name="file" type="file" multiple>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" id="fotos-nuevo-button-add">AÃ±adir fotos</button>
                </form>
            </div>
        </div>


        <div id="fotos-container">
            
            {{#if data.documentacion}}
                    {{#each data.documentacion}}
                        <div class="foto-ct">
                            <img width="100%" src="https://fotos.justq.eu/{{foto_control_documentacion_foto}}" onclick="showImgDocumentacion('{{foto_control_documentacion_foto}}')">
                            <div class="foto-ct-data">
                                <button class="foto-btn-right" onclick="deleteImg('{{foto_control_documentacion_id}}', '{{foto_control_documentacion_control_id}}')"><i class="bi bi-trash"></i></button>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}

        </div>

        {{#if data.documentacion}}
            <div id="fotos-del-ct">
                <button onclick="deleteAllImg('{{control_id}}')">Eliminar todas las fotos</button>
            </div>
        {{/if}}

        <div id="show-img-fotos-ct">
            <button id="show-img-fotos-btn" onclick="closeImgFotos()"><i class="bi bi-x-square"></i></button>
            <img id="show-img-fotos" src="">
        </div>
</div>