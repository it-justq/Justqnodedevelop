<div class="container-width-content">
    <p id="container-titulo">User controls</p>

        <p id="back-main"><a href="/intranet/administracion/usuarios/en/usuario/{{data.usuario.usuario_id}}"><i class="bi bi-arrow-left"></i> Back to user panel</a></p>

        
         <table id="table-data-controles">
            <thead>
                <tr>
                    <td colspan="3">{{data.usuario.usuario_nombre}} controls</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="table-data-controles-text"><strong>Activate control</strong></td>
                    <td>
                        <select>
                            <option>Select a control</option>
                            <option value="0">ASIGN ALL CONTROLS</option>
                            {{#each data.controles}}
                            <option value="{{control_tipo_id}}">{{control_tipo_nombre_en}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td><button id="table-data-controles-btn-add"><i class="bi bi-cloud-upload"></i></button></td>
                </tr>
                {{#each data.controles_asociados}}
                <tr>
                    <td class="table-data-controles-text">{{control_tipo_prefijo}}</td>
                    <td>{{control_tipo_nombre_en}}</td>
                    <td><button id="table-data-controles-btn-del"><i class="bi bi-trash"></i></button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>

</div>