<div class="container-width-content">
    
    <p id="container-titulo">Users <a href="/intranet/administracion/usuarios/en/nuevo">New user <i class="bi bi-plus-circle"></i></a></p>

    

    <div class="containerFilter">
        <button class='toggleFilter'>Filters</button>
        <form class="contentFilter" action="/intranet/administracion/usuarios/en/search" method="POST">
            <div class="contentFilterContainer">
                <label>User</label>
                <input type="text" name="usuario" placeholder="Username">
            </div>
            <div class="contentFilterContainer">
                <label>Name</label>
                <input type="text" name="nombre" placeholder="Name">
            </div>
            <div class="contentFilterContainer">
                <label>Role</label>
                <select name="rol">
                    <option value=""></option>
                    <option value="3">Client</option>
                    <option value="2">Surveyor</option>
                    <option value="1">Administrator</option>
                </select>
            </div>
            <div class="contentFilterContainer">
                <label>Status</label>
                <select name="estado">
                    <option value=""></option>
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
            </div>

            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button id="list-search-btn" class="contentFilterSubmit" type="submit">Apply filters</button>
        </form>

    </div>

        {{#if usuarios_search}}
            <table class="tableList">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td class="tableListUser">Username</td>
                        <td>Role</td>
                        <td>Status</td>
                    </tr>
                </thead>
                <tbdoy>
                    {{#each data.usuarios}}
                        <tr onclick="goUser({{usuario_id}})">
                            <td>{{usuario_nombre}}</label></td>
                            <td class="tableListUser">{{usuario_user}}</td>
                            <td class="">{{usuario_rol_nombre}}</td>
                            <td class="tableListStatus"><label class="usuarios-list-table-status {{#iffcond usuario_estado_id '===' 0}}usuarios-list-table-status-inactive"{{/iffcond}}{{#iffcond usuario_estado_id '===' 1}}usuarios-list-table-status-active"{{/iffcond}}><label>{{usuario_estado_nombre}}</label></label></td>
                        </tr>
                    {{/each}}
                </tbdoy>
            </table>
        {{/if}}

</div>