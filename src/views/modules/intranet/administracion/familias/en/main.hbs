<div class="container-width-content">
    <p id="container-titulo">Products <a href="/intranet/administracion/familias/en/nuevo">New product <i class="bi bi-plus-circle"></i></a></p>

    <div class="containerFilter">
        <button class='toggleFilter'>Filters</button>
        <form class="contentFilter" action="/intranet/administracion/familias/en/search" method="POST">
            <div class="contentFilterContainer">
                <label>Name</label>
                <input type="text" name="nombre" placeholder="Product">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button id="list-search-btn" class="contentFilterSubmit" type="submit">Apply filters</button>
        </form>

    </div>

        <table class="tableList" id="tableFamilias">
            <thead>
                <tr>
                    <td>English</td>
                    <td>Spanish</td>
                </tr>
            </thead>
            <tbdoy>
                {{#each data}}
                    <tr onclick="goFamilia('{{familia_id}}')">
                        <td>{{valorNull familia_nombre_en}}</td>
                        <td>{{valorNull familia_nombre}}</td>
                    </tr>
                {{/each}}
            </tbdoy>
        </table>

</div>